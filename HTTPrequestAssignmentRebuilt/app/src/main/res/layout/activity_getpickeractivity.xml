<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GETPICKERACTIVITY">

    <Button
        android:id="@+id/getAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET ALL"
        app:layout_constraintBottom_toTopOf="@id/getPath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_500"
        />

    <Button
        android:id="@+id/getPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET PATH"
        app:layout_constraintBottom_toTopOf="@id/getAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getQuery"
        android:textColor="@color/purple_500"
        />

    <Button
        android:id="@+id/getQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET QUERY"
        app:layout_constraintTop_toBottomOf="@id/getPath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/purple_500"
        />
</androidx.constraintlayout.widget.ConstraintLayout>